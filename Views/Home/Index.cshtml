@model WebApplication1.Models.MyViewModel

<form action="@Url.Action("GetMigration", "Home")" method="post">
    <label>
        <input type="checkbox" id="deleteToggle" />
        Enable Delete
    </label>

    @Html.HiddenFor(model => model.IsDeleteEnable, new { id = "IsDeleteEnable" })

    <button type="submit">Submit</button>
</form>

@section Scripts {
    <script>
        $('#deleteToggle').change(function() {
            $('#IsDeleteEnable').val(this.checked ? 'true' : 'false');
        });
    </script>
}
